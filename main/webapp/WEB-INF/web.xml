<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.mycompany.datingapp.userinterfaceserver.NewServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mycompany.datingapp.userinterfaceserver.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.mycompany.datingapp.userinterfaceserver.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeUserDataServlet</servlet-name>
        <servlet-class>com.mycompany.datingapp.userinterfaceserver.ChangeUserDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDataServlet</servlet-name>
        <servlet-class>com.mycompany.datingapp.userinterfaceserver.UpdateDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptDataServlet</servlet-name>
        <servlet-class>com.mycompany.datingapp.userinterfaceserver.AcceptDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.mycompany.datingapp.userinterfaceserver.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpenUserPageServlet</servlet-name>
        <servlet-class>com.mycompany.datingapp.userinterfaceserver.OpenUserPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InviteServlet</servlet-name>
        <servlet-class>com.mycompany.datingapp.userinterfaceserver.InviteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeUserDataServlet</servlet-name>
        <url-pattern>/ChangeUserDataServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDataServlet</servlet-name>
        <url-pattern>/UpdateDataServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptDataServlet</servlet-name>
        <url-pattern>/AcceptDataServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OpenUserPageServlet</servlet-name>
        <url-pattern>/OpenUserPageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InviteServlet</servlet-name>
        <url-pattern>/InviteServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            mainpage.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
